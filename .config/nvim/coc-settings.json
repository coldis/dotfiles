{
	"coc.preferences.formatOnSaveFiletypes": ["css", "javascript", "html", "json", "yaml", "terraform", "hcl", "typescript"],
	"eslint.autoFixOnSave": true,
	"list.normalMappings": {
	  "v": "action:vsplit",
	  "s": "action:split",
    "<C-c>": "command:wincmd q"
  },
  "list.insertMappings": {
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-c>": "command:wincmd q"
  },
  "list.source.files.args": ["--files", "--hidden"],
  "tsserver.reportStyleChecksAsWarnings": false,
  "diagnostic.checkCurrentLine": true
}
